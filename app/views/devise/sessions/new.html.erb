<% select_pack_style(%w[common devise]) %>

<h1 data-testid="<%= new_user_session_path %>"><%= title(t(".sign_in")) %></h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="devise-row">
    <%= f.label(:email, class: "devise-label") %>
    <div class="col">
      <%= f.email_field(:email, autofocus: true, autocomplete: "email", class: "form-control") %>
    </div>
  </div>

  <div class="devise-row">
    <%= f.label(:password, class: "devise-label") %>
    <div class="col">
      <%= f.password_field(:password, autocomplete: "current-password", class: "form-control") %>
    </div>
  </div>

  <div class="submit-row align-items-center">
    <div class="col-auto">
      <%= f.submit(t(".sign_in"), class: "btn btn-primary") %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="col-auto">
        <div class="form-check">
          <%= f.check_box(:remember_me, class: "form-check-input") %>
          <%= f.label(:remember_me, class: "form-check-label") %>
        </div>
      </div>
    <% end %>
 </div>
<% end %>

<%= render("devise/shared/links") %>
