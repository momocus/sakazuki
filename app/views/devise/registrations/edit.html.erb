<h1><%= t(".title", resource: resource.model_name.human) %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render("devise/shared/error_messages", resource: resource) %>

  <div class="devise-row">
    <%= f.label(:email, class: "devise-label") %>
    <div class="col">
      <%= f.email_field(:email,
                        autofocus: true, autocomplete: "email", placeholder: "mail@example.com", class: "form-control") %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="col">
      <%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email) %>
    </div>
  <% end %>

  <div class="devise-row">
    <%= f.label(:password, class: "devise-label") %>
    <div class="col">
      <% message = t(".leave_blank_if_you_don_t_want_to_change_it") %>
      <% if @minimum_password_length %>
        <% message = "#{message}, #{minimum_password_message(@minimum_password_length)}" %>
      <% end %>
      <%= f.password_field(:password, autocomplete: "new-password", placeholder: message, class: "form-control") %>
    </div>
  </div>

  <div class="devise-row">
    <%= f.label(:password_confirmation, class: "devise-label") %>
    <div class="col">
      <%= f.password_field(:password_confirmation, autocomplete: "new-password", class: "form-control") %>
    </div>
  </div>

  <div class="devise-row">
    <%= f.label(:current_password, class: "devise-label") %>
    <div class="col">
      <% currentpass = t(".we_need_your_current_password_to_confirm_your_changes") %>
      <%= f.password_field(:current_password,
                           autocomplete: "current-password", placeholder: currentpass, class: "form-control") %>
    </div>
  </div>

  <div class="devise-submit-row">
    <div class="col-auto">
      <%= f.submit(t(".update"), class: "btn btn-primary mx-3") %>
    </div>
  </div>
<% end %>

<h2><%= t(".unhappy") %></h2>

<div class="devise-submit-row">
  <div class="col-auto">
    <%= button_to(t(".cancel_my_account"),
     registration_path(resource_name),
     data: { confirm: t(".are_you_sure") },
     method: :delete,
     class: "btn btn-danger mx-3") %>
  </div>
</div>
