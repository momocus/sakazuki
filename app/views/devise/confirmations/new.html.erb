<h1 class="visually-hidden">
  <%= title(t("devise.confirmations.new.resend_confirmation_instructions")) %>
</h1>

<%= render(layout: "devise/shared/devise_layout") do %>
  <%= form_for(resource,
               as: resource_name,
               url: confirmation_path(resource_name),
               html: { method: :post }) do |f| %>
    <div class="row row-cols-1 g-3">
      <div class="col">
        <%= f.label(:email, { class: "visually-hidden" }) %>
        <%= f.email_field(:email,
                          class: "form-control",
                          autofocus: true,
                          autocomplete: "email",
                          placeholder: "mail@example.com",
                          value: resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
        <% resource.errors.full_messages_for(:email).each do |message| %>
          <div id="deviseEmailValidationFeedback" class="invalid-feedback">
            <%= message %>
          </div>
        <% end %>
      </div>
      <div class="col">
        <div class="row justify-content-center">
          <div class="col-auto">
            <%= f.submit(t("devise.confirmations.new.resend_confirmation_instructions"),
                         class: "btn btn-primary") %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
