<%# erb_lint:disable StrictLocals %>
<%# パーシャルビューの引数はkaminariに管理される
  # マジックコメントによる動的チェック、ERB LintのStrictLocals、の両方を行わない %>
<%= paginator.render do %>
  <nav>
    <ul class="pagination justify-content-center mb-0">
      <%= prev_page_tag %>
      <% each_page do |page| %>
        <% if page.left_outer? || page.right_outer? || page.inside_window? %>
          <%= page_tag(page) %>
        <% elsif !page.was_truncated? %>
          <%= gap_tag %>
        <% end %>
      <% end %>
      <%= next_page_tag %>
    </ul>
  </nav>
<% end %>
