<div class="col d-flex flex-column justify-content-between">
  <div>
    <% if sake.new_arrival? %>
      <span class="accent-text fs-5">
        <%= t(".new_arrival") %>
      </span>
    <% end %>
    <%= link_to(sake.name, sake_path(sake.id), class: "text-break text-decoration-none text-dark fs-2") %>
  </div>
  <div class="d-flex align-items-end justify-content-between">
    <% if sake.photos.any? %>
      <% photo = sake.photos.first %>
      <% thumb_tag = cl_image_tag(photo.image.thumb.url, class: "rounded img-fluid") %>
      <%= link_to(thumb_tag, sake_path(sake.id), class: "w-25", style: "min-width: 140px") %>
    <% else %>
      <%= cl_image_tag(image_url("sake-no-photo.avif"), class: "w-25 img-thumbnail", style: "min-width: 140px") %>
    <% end %>
    <div class="flex-grow-1 ms-5 text-end price-tag-border fs-4">
      <%= price_tag(sake.selling_price) %>
    </div>
  </div>
</div>
