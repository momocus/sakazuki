<%# locals: (sake:) %>
<% if sake.sealed? %>
  <li>
    <%= link_to(
          tag.i(class: "bi-droplet-half", style: "font-size: 0.95em;") + t(".open"),
          sake_path(sake, params: { sake: { bottle_level: "opened" }, drink_button: "open_sake" }),
          data: {
            turbo_method: :patch,
            turbo_confirm: t(".confirm_open", name: sake.name),
            testid: "open_button_#{sake.id}",
          },
        ) %>
  </li>
<% end %>
<% if sake.opened? %>
  <li>
    <%= link_to(
          tag.i(class: "bi-droplet", style: "font-size: 0.95em;") + t(".empty"),
          sake_path(sake, params: { sake: { bottle_level: "empty" }, drink_button: "empty_sake" }),
          data: {
            turbo_method: :patch,
            turbo_confirm: t(".confirm_empty", name: sake.name),
            testid: "empty_button_#{sake.id}",
          },
        ) %>
  </li>
<% end %>
