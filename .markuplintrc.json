{
  "extends": ["markuplint:recommended", "markuplint:recommended-static-html"],
  "parser": {
    "\\.erb$": "@markuplint/erb-parser"
  },
  "excludeFiles": ["app/views/layouts/mailer.html.erb"],
  "rules": {
    "required-h1": false
  },
  "nodeRules": [
    {
      "selector": "option",
      "rules": {
        "require-accessible-name": false
      }
    },
    {
      "selector": "datalist",
      "rules": {
        "require-accessible-name": false
      }
    }
  ]
}
